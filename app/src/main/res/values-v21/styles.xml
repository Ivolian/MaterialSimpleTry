<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.GreenMatter.Light.DarkActionBar">
        <item name="matColorPrimary">@color/primary</item>
        <item name="matColorPrimaryDark">@color/primarydark</item>
        <item name="matColorAccent">@color/accent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
