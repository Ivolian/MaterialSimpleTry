<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light">

    <com.ivo.materialsimpletry.mycode.ToolbarShadowLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:shadow="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar_shadow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        shadow:z_depth="z_depth1"
        shadow:z_depth_paddingBottom="z_depth3"
        shadow:z_depth_paddingLeft="z_depth0"
        shadow:z_depth_paddingRight="z_depth0"
        shadow:z_depth_paddingTop="z_depth0"
        shadow:z_depth_shape="rect">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/gm__solid_primary"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/gm__solid_primary"
                app:tabSelectedTextColor="#ffffff"
                app:tabTextColor="#dddddd" />

        </LinearLayout>

    </com.ivo.materialsimpletry.mycode.ToolbarShadowLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="112dp" />

</FrameLayout>
