<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Button (Default) -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/listPopupButton"
                style="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="button" />

            <Button
                style="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="button" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="button" />
        </LinearLayout>

        <!-- Colored button -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/coloredButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:color="?colorPrimary"
                android:text="button" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:color="?colorPrimary"
                android:enabled="false"
                android:text="button" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:color="?colorPrimary"
                android:text="button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:color="?colorPrimaryDark"
                android:text="button" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:color="?colorPrimaryDark"
                android:enabled="false"
                android:text="button" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:color="?colorPrimaryDark"
                android:text="button" />
        </LinearLayout>

        <!-- Borderless button -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="button" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="button" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="button"
                android:textColor="?attr/colorPrimary" />

        </LinearLayout>

        <com.ivo.flatbutton.FlatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:text="确认1"
            flatui:fl_blockButtonEffectHeight="3dp"
            flatui:fl_mainColor="?attr/colorPrimary"
            flatui:fl_textAppearance="fl_none"
            flatui:fl_touchEffect="fl_ease" />

        <com.ivo.flatbutton.FlatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="确认2"
            flatui:fl_blockButtonEffectHeight="3dp"
            flatui:fl_mainColor="?attr/colorAccent"
            flatui:fl_textAppearance="fl_none"
            flatui:fl_touchEffect="fl_ripple" />

        <com.ivo.flatbutton.FlatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:enabled="false"
            android:text="确认3"
            flatui:fl_blockButtonEffectHeight="3dp"
            flatui:fl_mainColor="?attr/colorPrimary"
            flatui:fl_textAppearance="fl_none"
            flatui:fl_touchEffect="fl_ease" />

    </LinearLayout>
</ScrollView>
